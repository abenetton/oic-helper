Screen {
    align: center middle;
}

OptionList {
    width: 70%;
    height: 80%;
}

HostNavigator {
    width: 70%;
    height: 80%;
}

HostPicker {
    layout: grid;
    grid-size: 4;
    grid-rows: 1fr 6fr 1fr;
}

.box {
    height: 100%;
    width: 100%;
    border: solid green;
}

.host_list {
    column-span: 2;
    width: 100%;
    height: 100%;
}

HostCompare {
    border: solid green;
    height: 100%;
    width: 100%;
}

Label {
    width: 100%;
}